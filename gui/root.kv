#:kivy 1.9.1
#:include gui/widgets/buttontabpanel.kv
#:include gui/widgets/codescrollview.kv
#:include gui/widgets/labelrecolorable.kv
#:include gui/widgets/commitcontextview.kv
#:include gui/widgets/commitboxview.kv

BoxLayout:
  orientation: 'vertical'

  CommitBoxView:
    id: log_commit_history

  GridLayout:
    rows: 4
    cols: 2
    padding: 1
    spacing: 0

    SwitchButton:
      size_hint: (1.0, None)
      height: 50
      text: "Blame to Diff"

    SwitchButton:
      id: diff_to_blame
      size_hint: (1.0, None)
      height: 50
      text: "Diff to Blame"

    ButtonTabPanel:
      id: blame_history
      size_hint: (1.0, None)

    ButtonTabPanel:
      id: diff_files
      size_hint: (1.0, None)

    BlameCodeScrollView:
      id: blame_codelines_list
      size_hint: (1.0, 0.70)

    DiffCodeScrollView:
      id: diff_codelines_list
      size_hint: (1.0, 0.70)

    InitCommitContextView:
      id: blame_commit_context
      size_hint: (1.0, 0.3)

    CommitContextView:
      id: diff_commit_context
      size_hint: (1.0, 0.3)
