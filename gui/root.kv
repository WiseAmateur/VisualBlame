#:kivy 1.9.1
#:include gui/widgets/buttontabpanel.kv
#:include gui/widgets/codescrollview.kv
#:include gui/widgets/recolorablebg.kv
#:include gui/widgets/commitcontextview.kv
#:include gui/widgets/commitboxview.kv

BoxLayoutRecolorable:
  orientation: 'vertical'
  bg_color: 0.3, 0.3, 0.3

  CommitBoxView:
    size_hint: (None, None)
    height: 60
    id: log_commit_history

  BoxLayout:
    size_hint: (1.0, None)
    height: 75
    spacing: 50

    BlameButtonTabPanel:
      id: blame_history

    DiffButtonTabPanel:
      id: diff_files
      view_to_update: diff_codelines_list
      commit_view: diff_commit_context

  BoxLayout:
    size_hint: (1.0, 0.70)

    BlameCodeScrollView:
      id: blame_codelines_list
      on_file_path_rel: blame_history.update_active_file(self.file_path_rel)
      on_blame_path_rel: diff_files.update_active_file(self.blame_path_rel)

    SwitchButton:
      id: diff_to_blame
      size_hint: (None, 1.0)
      width: 50
      text: "<"
      from_scrollview: diff_files
      to_scrollview: blame_codelines_list

    DiffCodeScrollView:
      id: diff_codelines_list

  BoxLayout:
    size_hint: (1.0, 0.3)

    InitCommitContextView:
      id: blame_commit_context
      on_switch: log_commit_history.update_viewed_commit("blame", self.ids.id.text, [0.25, 0.75, 0.5])

    SwitchButton:
      text: ">"
      size_hint: (None, 1.0)
      width: 50

    CommitContextView:
      id: diff_commit_context
      on_switch: log_commit_history.update_viewed_commit("diff", self.ids.id.text, [0.25, 0.5, 0.75])
