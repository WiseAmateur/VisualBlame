#:kivy 1.9.1

<CodeContainer>:
  cols: 1
  size_hint: 1, None
  height: self.minimum_height

<CodeListItem>:
  size_hint_y: None
  height: line_label.height

  CodeNumLabel:
    id: linenum_label
    # Set the width to the text size of the linenum and the height as big as possible
    size_hint: None, 1
    width: self.texture_size[0]
    text_size: None, self.size[1]
    text: '0'
    valign: 'top'

  CodeLineLabel:
    id: line_label
    # Set the height to the line text size and the width as big as possible
    size_hint: 1, None
    height: self.texture_size[1] if self.texture_size[1] > 21 else 21
    text_size: self.width, None
    text: 'line'
    halign: 'left'

<BlameCodeListItem>:
  selected_bg_color: 0.25, 0.5, 0.75
  deselected_bg_color: 0, 0, 0

<CodeLineLabel@LabelRecolorable, CodeNumLabel@Label>:
  font_name: 'data/fonts/RobotoMono-Regular.ttf'
