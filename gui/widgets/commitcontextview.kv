#:kivy 1.9.1

<CommitContextView>:
  orientation: 'vertical'
  padding: 4
  spacing: 4
  border_width: 4
  bg_color: 0.73, 0.73, 0.73

  Label:
    id: id
    size_hint: (1.0, 0.04)
    text: ''
    color: (0,0,0,1)

  Label:
    id: date
    size_hint: (1.0, 0.04)
    text: ''
    color: (0,0,0,1)

  BoxLayoutRecolorable:
    orientation: 'vertical'
    size_hint: (1.0, 0.09)
    bg_color: 0.83, 0.83, 0.83

    Label:
      id: author_name
      color: (0,0,0,1)

    Label:
      id: author_email
      color: (0,0,0,1)
      bg_color: 0.83, 0.83, 0.83

  ScrollView:
    size_hint: (1.0, 0.17)
    do_scroll_x: False

    Label:
      id: message
      size_hint: (1.0, None)
      height: self.texture_size[1]
      text_size: self.width, None
      halign: 'center'
      color: (0,0,0,1)
