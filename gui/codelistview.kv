#:kivy 1.9.1

<CodeScrollView>:
  CodeItemContainer:
    id: codeline_container
    cols: 1
    orientation: 'vertical'
    size_hint: 1, None
    height: self.minimum_height

<CodeListItem>:
  size_hint_y: None
  height: line_label.height

  CodeNumLabel:
    id: linenum_label
    size_hint: None, 1
    text_size: None, self.size[1]
    width: self.texture_size[0]
    valign: 'top'
    text: '0'

    canvas.before:
      Color:
        rgb: 0.3, 0.5, 0.5
      Rectangle:
        pos: self.pos
        size: self.size

  CodeLineLabel:
    id: line_label
    size_hint: 1, None
    text_size: self.width, None
    height: self.texture_size[1] if self.texture_size[1] > 21 else 21
    text: 'line'

    canvas.before:
      Color:
        rgb: 0.5, 0.5, 0.5
      Rectangle:
        pos: self.pos
        size: self.size

<CodeLineLabel, CodeNumLabel>:
  font_name: 'data/fonts/RobotoMono-Regular.ttf'

<CodeNumLabel>:
  bgcolor: 0.5, 0.5, 0.5
  size_hint: (None, 1)

<CodeLineLabel>:
  halign: 'left'
  size_hint: (1, None)

<BlameCodeLineLabel>:
  selected_bgcolor: 0.5, 0.60, 0.25