#:kivy 1.9.1
#:import KivyLexer kivy.extras.highlight.KivyLexer
#:import ListAdapter kivy.adapters.listadapter.ListAdapter
#:import ListItemButton kivy.uix.listview.ListItemButton

#:import VisualBlame gui.VisualBlame
#:import gui gui

<ListItemButtonCode>:
  font_name: 'data/fonts/RobotoMono-Regular.ttf'
  text_size: self.width - 20, self.height
  text: 'test'
  halign: 'left'
  valign: 'middle'
  deselected_color: [0., 0., 0., 1]
  selected_color: [0.5, 1., 0.25, 1]

<LabelRecolorable>:
  bg_color: 0, 0, 0
  canvas.before:
    Color:
      rgb: self.bg_color
    Rectangle:
      pos: self.pos
      size: self.size

GridLayout:
  id: container
  rows: 3
  cols: 0
  padding: 1
  spacing: 3

  ListView:
    id: codelines_list
    size_hint: (1.0, 0.66)

  GridLayout:
    id: commit_container
    rows: 2
    cols: 2
    padding: 1
    spacing: 0
    size_hint: (1.0, 0.11)

    LabelRecolorable:
      text: 'blame id'
      color: (0,0,0,1)
      bg_color: 0.73, 0.73, 0.73

    LabelRecolorable:
      text: 'blame date'
      color: (0,0,0,1)
      bg_color: 0.73, 0.73, 0.73

    LabelRecolorable:
      text: 'blame name'
      color: (0,0,0,1)
      bg_color: 0.83, 0.83, 0.83

    LabelRecolorable:
      text: 'blame email'
      color: (0,0,0,1)
      bg_color: 0.83, 0.83, 0.83

  LabelRecolorable:
    id: blame_info
    size_hint: (1.0, 0.23)
    text: 'blame info'
    color: (0,0,0,1)
    bg_color: 0.83, 0.83, 0.83